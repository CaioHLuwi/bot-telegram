# === ZAPVOICE API ===
# Obtenha suas credenciais no painel do ZapVoice
ZAPVOICE_API_KEY=sua_api_key_zapvoice_aqui
ZAPVOICE_BASE_URL=https://api.zapvoice.com.br

# === WEBHOOK CONFIGURAÇÕES ===
# Chave secreta para validar webhooks (opcional mas recomendado)
WEBHOOK_SECRET=minha_chave_secreta_webhook_super_segura

# URL base onde seu backend está rodando (para webhooks)
# Em produção, substitua pelo seu domínio real
WEBHOOK_BASE_URL=https://seu-dominio.com

# === SERVIDOR ===
# Porta onde o backend vai rodar
PORT=5000

# Modo debug (true/false)
DEBUG=true

# === BANCO DE DADOS (OPCIONAL) ===
# Para produção, recomenda-se usar um banco de dados real
# DATABASE_URL=postgresql://user:password@localhost:5432/pix_zapvoice
# REDIS_URL=redis://localhost:6379/0

# === LOGS ===
# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# === SEGURANÇA ===
# Chave secreta para JWT (se implementar autenticação)
JWT_SECRET=sua_chave_jwt_super_secreta

# CORS origins permitidas (separadas por vírgula)
CORS_ORIGINS=http://localhost:3000,https://seu-frontend.com

# === TIMEOUTS ===
# Timeout para requisições HTTP (segundos)
HTTP_TIMEOUT=30

# Tempo de expiração do PIX (segundos) - padrão 30 minutos
PIX_EXPIRATION=1800